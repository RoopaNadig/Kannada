<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.kannada">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_xl"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NumbersActivity"
            android:label="Numbers"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".FamilyActivity"
            android:label="Family"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".ColorsActivity"
            android:label="Colors"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".PhrasesActivity"
            android:label="Phrases"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>